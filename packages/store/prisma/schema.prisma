generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @default(uuid()) @id
  username  String
  password  String
  createdAt DateTime @default(now())
  websites  websites[]
}

model websites {
  id    String @default(uuid()) @id
  url   String
  user_id String
  ticks   ticks[]
  user    User  @relation(fields: [user_id], references: [id])
}

model region {
  id      String @default(uuid()) @id
  name    String
  ticks   ticks[]
}

model ticks {
  id     String @default(uuid()) @id
  response_ms String
  status    Status
  region_id String
  website_id String
  created_at DateTime @default(now())
  region  region @relation(fields: [region_id], references: [id])
  website websites @relation(fields: [website_id], references: [id])
}


enum Status {
  Up
  Down
  Unknown
}